<Window x:Class="View.WPFBrowserClient.RootSiteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:local="clr-namespace:View.WPFBrowserClient"
        xmlns:view="clr-namespace:WPFBrowserClient.View"
        mc:Ignorable="d"
        Title="Scraper Browser" Height="820" Width="1024">
    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <view:SearchBar Grid.Row="0"></view:SearchBar>
        <wpf:ChromiumWebBrowser x:Name="Browser" Address="{Binding URL, Mode=TwoWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="2" Grid.Row="1"/>
        <Button Grid.Row="2" VerticalAlignment="Center" Background="LightSeaGreen" Padding="5" FontSize="20">Start Scraping</Button>
    </Grid>
</Window>
