<UserControl x:Class="WPFBrowserClient.View.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFBrowserClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="30" HorizontalAlignment="Stretch">
    <Grid VerticalAlignment="Center" Height="30" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="urlTb" Text="{Binding URL, Mode=TwoWay}"  VerticalAlignment="Stretch" Grid.Column="0" VerticalContentAlignment="Center" FontSize="15"/>
        <Button x:Name="settingsBtn" Content="Settings" Background="LightSeaGreen" VerticalAlignment="Stretch"  Grid.Column="1" Padding="10,0,10,0"/>
    </Grid>
</UserControl>
