<UserControl x:Class="WPFBrowserClient.View.SearchBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFBrowserClient.View"
             mc:Ignorable="d"
             d:DesignHeight="30" HorizontalAlignment="Stretch">
    <Grid VerticalAlignment="Center" Height="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="urlTb" Text="{Binding URL, Mode=TwoWay}"  VerticalAlignment="Stretch"  VerticalContentAlignment="Center" FontSize="15" />
    </Grid>
</UserControl>